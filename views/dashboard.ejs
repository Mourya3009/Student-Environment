  width: 24px;
  height: 18px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hamburger span {
  width: 100%;
  height: 2px;
  background: #4a5568;
  border-radius: 2px;
  transition: all 0.3s ease;
  transform-origin: center;
}

.sidebar-toggle:hover .hamburger span {
  background: #667eea;
}

.sidebar-toggle:hover .hamburger span:nth-child(1) {
  transform: translateY(6px) rotate(45deg);
}

.sidebar-toggle:hover .hamburger span:nth-child(2) {
  opacity: 0;
}

.sidebar-toggle:hover .hamburger span:nth-child(3) {
  transform: translateY(-6px) rotate(-45deg);
}

/* Advanced User Info */
.user-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.avatar-container {
  position: relative;
}

