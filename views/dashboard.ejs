<%- include("partials/header") %>
<%- include("partials/sidebar") %>


<main class="main-content">
  <div class="dashboard">
    <div class="container">
      <!-- Dashboard Header -->
      <div class="dashboard-header">
        <div class="header-left">
          <button class="sidebar-toggle" onclick="toggleSidebar()">
            <div class="hamburger">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </button>
          <div class="welcome-section">
            <div class="welcome-text">
              <h1>Welcome back, <%= name %></h1>
              <p class="welcome-subtitle">Here's what's happening with your studies today</p>
            </div>
            <div class="date-time" id="currentDateTime"></div>
          </div>
        </div>
        
        <div class="header-right">
          <div class="quick-stats">
            <div class="stat-item">
              <div class="stat-icon">📚</div>
              <div class="stat-content">
                <div class="stat-value">3.8</div>
                <div class="stat-label">GPA</div>
              </div>
            </div>
            <div class="stat-item">
              <div class="stat-icon">⏱️</div>
              <div class="stat-content">
                <div class="stat-value">36h</div>
                <div class="stat-label">This Week</div>
              </div>
            </div>
            <div class="stat-item">
              <div class="stat-icon">🎯</div>
              <div class="stat-content">
                <div class="stat-value">85%</div>
                <div class="stat-label">Progress</div>
              </div>
            </div>
          </div>
          
          <div class="header-actions">
            <button class="action-btn notification-btn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
                <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
              </svg>
              <span class="notification-badge">3</span>
            </button>
            
            <button class="action-btn settings-btn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
              </svg>
            </button>
            
            <div class="profile-section">
              <div class="profile-avatar">
                <div class="profile-text"><%= name.charAt(0).toUpperCase() %></div>
                <div class="online-status"></div>
              </div>
            </div>
          </div>
        </div>
      </div>



      <!-- AI Tools Section - Featured -->
      <div class="ai-tools-featured">
        <div class="featured-header">
          <h2>🤖 AI-Powered Tools</h2>
          <p>Access advanced AI features to enhance your learning experience</p>
        </div>
        <div class="ai-tools-grid-featured">
          <a href="/code-generator" class="ai-tool-card-featured">
            <div class="tool-icon-featured">💻</div>
            <div class="tool-content-featured">
              <h3>Code Generator</h3>
              <p>AI-powered code generation with smart suggestions and intelligent assistance</p>
              <div class="tool-features">
                <span class="feature-tag">Code Generation</span>
                <span class="feature-tag">Smart Suggestions</span>
                <span class="feature-tag">Chat Interface</span>
              </div>
            </div>
            <div class="tool-arrow-featured">→</div>
          </a>
          
          <a href="/resume-builder" class="ai-tool-card-featured">
            <div class="tool-icon-featured">📄</div>
            <div class="tool-content-featured">
              <h3>Resume Builder</h3>
              <p>Create professional resumes with AI enhancement and smart formatting</p>
              <div class="tool-features">
                <span class="feature-tag">AI Enhancement</span>
                <span class="feature-tag">Professional Templates</span>
                <span class="feature-tag">Smart Formatting</span>
              </div>
            </div>
            <div class="tool-arrow-featured">→</div>
          </a>
          
          <a href="/stress-analyzer" class="ai-tool-card-featured">
            <div class="tool-icon-featured">🧠</div>
            <div class="tool-content-featured">
              <h3>Stress Analyzer</h3>
              <p>Analyze mental stress levels with comprehensive AI assessment</p>
              <div class="tool-features">
                <span class="feature-tag">Mental Health</span>
                <span class="feature-tag">AI Assessment</span>
                <span class="feature-tag">Stress Score</span>
              </div>
            </div>
            <div class="tool-arrow-featured">→</div>
          </a>
          
          <a href="/course-recommender" class="ai-tool-card-featured">
            <div class="tool-icon-featured">🎓</div>
            <div class="tool-content-featured">
              <h3>Course Recommender</h3>
              <p>Get personalized course recommendations based on budget and learning pace</p>
              <div class="tool-features">
                <span class="feature-tag">Personalized</span>
                <span class="feature-tag">Budget Based</span>
                <span class="feature-tag">Learning Pace</span>
              </div>
            </div>
            <div class="tool-arrow-featured">→</div>
          </a>
        </div>
      </div>

      <!-- Main Content -->
      <div class="content-grid">
        <!-- Left Column -->
        <div class="left-column">
          <!-- Study Analytics -->
          <div class="card">
            <div class="card-header">
              <h3>📊 Study Analytics</h3>
            </div>
            <div class="card-content">
              <div class="analytics-grid">
                <div class="analytics-item">
                  <div class="analytics-icon">📚</div>
                  <div class="analytics-content">
                    <div class="analytics-value">12/20</div>
                    <div class="analytics-label">Modules Completed</div>
                  </div>
                </div>
                
                <div class="analytics-item">
                  <div class="analytics-icon">📝</div>
                  <div class="analytics-content">
                    <div class="analytics-value">8/12</div>
                    <div class="analytics-label">Assignments Done</div>
                  </div>
                </div>
                
                <div class="analytics-item">
                  <div class="analytics-icon">🎯</div>
                  <div class="analytics-content">
                    <div class="analytics-value">14</div>
                    <div class="analytics-label">Day Streak</div>
                  </div>
                </div>
                
                <div class="analytics-item">
                  <div class="analytics-icon">⏱️</div>
                  <div class="analytics-content">
                    <div class="analytics-value">5.2h</div>
                    <div class="analytics-label">Avg Daily</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Current Course -->
          <div class="card">
            <div class="card-header">
              <h3>📖 Current Course</h3>
            </div>
            <div class="card-content">
              <div class="course-info">
                <h4>Advanced Data Structures & Algorithms</h4>
                <div class="course-progress">
                  <div class="progress-circle">
                    <svg width="60" height="60" viewBox="0 0 60 60">
                      <circle cx="30" cy="30" r="25" fill="none" stroke="#e0e0e0" stroke-width="4"/>
                      <circle cx="30" cy="30" r="25" fill="none" stroke="#667eea" stroke-width="4" stroke-dasharray="157" stroke-dashoffset="39" transform="rotate(-90 30 30)"/>
                    </svg>
                    <div class="progress-text">75%</div>
                  </div>
                  <div class="course-details">
                    <p>Next session: Today at 2:00 PM</p>
                    <p>5 modules remaining</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="right-column">
          <!-- Upcoming Tasks -->
          <div class="card">
            <div class="card-header">
              <h3>📅 Upcoming Tasks</h3>
            </div>
            <div class="card-content">
              <div class="tasks-list">
                <div class="task-item urgent">
                  <div class="task-content">
                    <div class="task-title">Data Structures Assignment</div>
                    <div class="task-time">Today, 11:59 PM</div>
                  </div>
                </div>
                <div class="task-item">
                  <div class="task-content">
                    <div class="task-title">Machine Learning Quiz</div>
                    <div class="task-time">Tomorrow, 2:00 PM</div>
                  </div>
                </div>
                <div class="task-item">
                  <div class="task-content">
                    <div class="task-title">Research Paper Draft</div>
                    <div class="task-time">Friday, 5:00 PM</div>
                  </div>
                </div>
              </div>
            </div>
          </div>



          <!-- Quick Actions -->
          <div class="card">
            <div class="card-header">
              <h3>⚡ Quick Actions</h3>
            </div>
            <div class="card-content">
              <div class="actions-list">
                <button class="action-btn primary">
                  <span>🎯 Start Study Session</span>
                </button>
                <button class="action-btn">
                  <span>📅 View Schedule</span>
                </button>
                <button class="action-btn">
                  <span>📚 Resources</span>
                </button>
                <button class="action-btn">
                  <span>🤖 AI Tutor</span>
                </button>
              </div>
            </div>
          </div>

          <!-- Wellness -->
          <div class="card">
            <div class="card-header">
              <h3>💚 How are you feeling?</h3>
            </div>
            <div class="card-content">
              <div class="mood-buttons">
                <button class="mood-btn" onclick="trackMood('excellent')">😊</button>
                <button class="mood-btn" onclick="trackMood('good')">🙂</button>
                <button class="mood-btn" onclick="trackMood('okay')">😐</button>
                <button class="mood-btn" onclick="trackMood('bad')">😔</button>
                <button class="mood-btn" onclick="trackMood('terrible')">😢</button>
              </div>
              <div class="mood-status" id="moodStatus">Track your mood</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Collapsible Sidebar -->
<aside class="sidebar" id="sidebar">
  <nav>
    <a href="/dashboard">🏠 Dashboard</a>
    <a href="/profile">👤 Profile</a>
    <a href="/modules">📚 Modules</a>
    <a href="/progress">📈 Progress</a>
    <a href="/logout">🚪 Logout</a>
  </nav>
</aside>

<!-- Overlay for mobile -->
<div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

<style>
/* Sidebar Toggle Styles */
.sidebar-toggle {
  background: none;
  border: none;
  color: #4a5568;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 8px;
  transition: all 0.2s ease;
  margin-right: 1rem;
}

.sidebar-toggle:hover {
  background: #f7fafc;
  color: #667eea;
}

.header-left {
  display: flex;
  align-items: center;
}

/* Sidebar Styles */
.sidebar {
  width: 240px;
  background-color: #283593;
  color: white;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  padding: 2rem 1rem;
  box-shadow: 2px 0 6px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  transition: transform 0.3s ease;
  transform: translateX(-100%);
}

.sidebar.open {
  transform: translateX(0);
}

.sidebar a {
  display: block;
  color: white;
  text-decoration: none;
  margin: 1rem 0;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.sidebar a:hover {
  background-color: #5c6bc0;
  transform: translateX(4px);
}

/* Overlay */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.sidebar-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Main Content Adjustment */
.main-content {
  margin-left: 0;
  padding: 2rem;
  transition: margin-left 0.3s ease;
}

.main-content.sidebar-open {
  margin-left: 240px;
}

/* Clean Dashboard Styles */
.dashboard {
  background: #f8fafc;
  min-height: 100vh;
  padding: 2rem;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

/* Dashboard Header */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
  padding: 2.5rem 3rem;
