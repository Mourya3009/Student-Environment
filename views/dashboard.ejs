  gap: 2rem;
}

.welcome-section {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.welcome-text h1 {
  color: #1a202c;
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: 0.25rem;
